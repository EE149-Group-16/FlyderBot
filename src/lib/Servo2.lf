target C {
    single-threaded: true,
    files: ["../../robot-lib/"],
    cmake-include: ["../../robot-lib/robot-lib.txt"],
    platform: "RP2040"
}

preamble {=
    #include <servo2.h>
=}

reactor Servo {
    input angle: uint16_t

    reaction(startup) {=
        servo_init();
    =}

    reaction (angle) {=
        // printf("SErvo.lf: %d", angle->value);

        servo_set_angle(angle->value);
    =}
}